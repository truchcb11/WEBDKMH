
@{
    ViewBag.Title = "ShowResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WEBDKMH.Models.ExamResultViewModel

<div class="container mt-5">
    <h2 class="text-center">Kết quả bài thi</h2>
    <div class="mt-4">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            var userAnswer = Model.Results.FirstOrDefault(r => r.Idques == question.Id)?.Answer;
            var correctAnswer = question.Answer;

<div class="card mb-3">
    <div class="card-header">
        <h4>@question.Question1</h4>
    </div>
    <div class="card-body">
        <div class="form-check">
            <input type="radio" class="form-check-input" disabled @(userAnswer == question.AnswerA ? "checked" : "") />
            <label class="form-check-label @(question.Answer == question.AnswerA ? "text-success" : "")">@question.AnswerA</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" disabled @(userAnswer == question.AnswerB ? "checked" : "") />
            <label class="form-check-label @(question.Answer == question.AnswerB ? "text-success" : "")">@question.AnswerB</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" disabled @(userAnswer == question.AnswerC ? "checked" : "") />
            <label class="form-check-label @(question.Answer == question.AnswerC ? "text-success" : "")">@question.AnswerC</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" disabled @(userAnswer == question.AnswerD ? "checked" : "") />
            <label class="form-check-label @(question.Answer == question.AnswerD ? "text-success" : "")">@question.AnswerD</label>
        </div>
        <p class="mt-2"><strong>Câu trả lời đúng:</strong> @correctAnswer</p>
        <p class="mt-2 @(userAnswer == correctAnswer ? "text-success" : "text-danger")"><strong>Câu trả lời của bạn:</strong> @userAnswer</p>
    </div>
</div>}
